--DROP TABLE "BPM_EXECUTION_TREE"

CREATE TABLE "BPM_EXECUTION_TREE" 
   (	
   "ID" NUMBER GENERATED ALWAYS AS IDENTITY NOT NULL,
   "EXECUTION_TREE_CODE" VARCHAR2(50),
   "ROOT_INFO" CLOB,
   "CHILDREN_INFO" CLOB,
	 "CREATE_DATE" DATE DEFAULT SYSDATE,
   CONSTRAINT "BPM_EXECUTION_TREE_PK" PRIMARY KEY ("ID")
   );
   COMMENT ON COLUMN "BPM_EXECUTION_TREE"."EXECUTION_TREE_CODE" IS 'Mã quản lý Execution-tree theo Instance trên database';
   COMMENT ON COLUMN "BPM_EXECUTION_TREE"."ROOT_INFO" IS 'Info data của root';
   COMMENT ON COLUMN "BPM_EXECUTION_TREE"."CHILDREN_INFO" IS 'Info data của children';
   COMMENT ON COLUMN "BPM_EXECUTION_TREE"."CREATE_DATE" IS 'Ngày tạo trên database. Default = SYSDATE';
