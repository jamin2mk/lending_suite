--DROP TABLE "BPM_TASK_MASTER"

CREATE TABLE "BPM_TASK_MASTER" 
   (	
   "ID" NUMBER GENERATED ALWAYS AS IDENTITY NOT NULL,
   "TASK_MASTER_CODE" VARCHAR2(50),   
	 "CREATE_DATE" DATE DEFAULT SYSDATE,
   CONSTRAINT "BPM_TASK_MASTER_PK" PRIMARY KEY ("ID")
   );
   COMMENT ON COLUMN "BPM_TASK_MASTER"."TASK_MASTER_CODE" IS 'Mã quản lý Task theo Instance trên database';
   COMMENT ON COLUMN "BPM_TASK_MASTER"."CREATE_DATE" IS 'Ngày tạo trên database. Default = SYSDATE';
