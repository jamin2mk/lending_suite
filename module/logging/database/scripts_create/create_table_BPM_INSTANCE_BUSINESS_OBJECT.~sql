--DROP TABLE "BPM_INSTANCE_BUSINESS_OBJECT"

CREATE TABLE "BPM_INSTANCE_BUSINESS_OBJECT" 
   (	
   "ID" NUMBER GENERATED ALWAYS AS IDENTITY NOT NULL,
   "INSTANCE_MASTER_CODE" VARCHAR2(50) DEFAULT ('INS2' || to_char(SYSDATE, 'yymmdd') || to_char("BPM_INSTANCE_SEQ"."NEXTVAL")),
   "BUSINESS_OBJECT" CLOB,
	 "CREATE_DATE" DATE DEFAULT SYSDATE,
   CONSTRAINT "BPM_INSTANCE_BUSINESS_OBJECT_PK" PRIMARY KEY ("ID"),
   CONSTRAINT "BPM_INSTANCE_BUSINESS_OBJECT_CTR_1" UNIQUE (INSTANCE_MASTER_CODE)
   );
   COMMENT ON COLUMN "BPM_INSTANCE_BUSINESS_OBJECT"."INSTANCE_MASTER_CODE" IS 'Mã quản lý Instance trên database (UNIQUE) ref với INSTANCE_MASTER_CODE trong bảng BPM_INSTANCE_MASTER.';
   COMMENT ON COLUMN "BPM_INSTANCE_BUSINESS_OBJECT"."BUSINESS_OBJECT" IS 'Data của Instance';
   COMMENT ON COLUMN "BPM_INSTANCE_BUSINESS_OBJECT"."CREATE_DATE" IS 'Ngày tạo trên database. Default = SYSDATE';
